{% extends '@App/layout.html.twig' %}

    {% block content %}

    <div class="row">
        <div class="col-sm-6 col-md-5 col-md-offset-4">
            <h2>{{ title }} Address</h2>
            {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                <div class="form-group">
                    <label>Firstname</label>
                    {{ form_widget(form.firstname, {attr: {class: 'form-control'}}) }}
                    {{ form_errors(form.firstname) }}
                </div>
                <div class="form-group">
                    <label>Lastname</label>
                    {{ form_widget(form.lastname, {attr: {class: 'form-control'}}) }}
                    {{ form_errors(form.lastname) }}
                </div>
                <div class="form-group">
                    <label>Birthday</label>
                    {{ form_widget(form.birthday, {attr: {class: 'form-control'}}) }}
                    {{ form_errors(form.birthday) }}
                </div>
                <div class="form-group">
                    <label>Street</label>
                    {{ form_widget(form.street, {attr: {class: 'form-control'}}) }}
                    {{ form_errors(form.street) }}
                </div>
                <div class="form-group">
                    <label>number</label>
                    {{ form_widget(form.number, {attr: {class: 'form-control'}}) }}
                    {{ form_errors(form.number) }}
                </div>
                <div class="form-group">
                    <label>Zip</label>
                    {{ form_widget(form.zip, {attr: {class: 'form-control'}}) }}
                    {{ form_errors(form.zip) }}
                </div>
                <div class="form-group">
                    <label>City</label>
                    {{ form_widget(form.city, {attr: {class: 'form-control'}}) }}
                    {{ form_errors(form.city) }}
                </div>
                <div class="form-group">
                    <label>Country</label>
                    {{ form_widget(form.country, {attr: {class: 'form-control'}}) }}
                    {{ form_errors(form.country) }}
                </div>
                <div class="form-group">
                    <label>Phonenumber</label>
                    {{ form_widget(form.phonenumber, {attr: {class: 'form-control'}}) }}
                    {{ form_errors(form.phonenumber) }}
                </div>
                <div class="form-group">
                    <label>Email</label>
                    {{ form_widget(form.email, {attr: {class: 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>

                {#<button type="submit" class="btn btn-default">Create</button>#}
                <input type="submit" class="btn" value="{{ title }}" />
            {{ form_end(form) }}
        </div>
    </div>

    {% endblock %}
