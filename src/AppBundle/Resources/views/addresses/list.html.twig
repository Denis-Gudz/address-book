{% extends '@App/layout.html.twig' %}



    {% block content %}

    <div class="row">

        <div class="col-md-10 col-md-offset-1">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-notice">
                    {{ message }}
                </div>
            {% endfor %}

            {% if addresses is not empty %}
                <div class="panel panel-default panel-table">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col col-xs-6">
                                <h3 class="panel-title">Address book</h3>
                            </div>
                            <div class="col col-xs-6 text-right">
                                <a type="button" target="_blank" href="{{ path('address_add') }}" class="btn btn-sm btn-primary btn-create">Create New</a>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-list">
                            <thead>
                            <tr>
                                <th><em class="fa fa-cog"></em></th>
                                <th class="hidden-xs">Name</th>
                                <th>Address</th>
                                <th>Zip</th>
                                <th>City</th>
                                <th>Country</th>
                                <th>Phonenumber</th>
                                <th>Birthday</th>
                                <th>Email</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for address in addresses %}
                                <tr>
                                    <td align="center">
                                        <a class="btn btn-default" href="{{ path('address_edit', { 'id' : address.id }) }}"><em class="fa fa-pencil"></em></a>
                                        <a class="btn btn-danger" href="{{ path('address_remove', { 'id' : address.id }) }}"><em class="fa fa-trash"></em></a>
                                    </td>
                                    <td><a href="{{ path('address_detail', { 'id' : address.id }) }}" target="_blank">{{ address.firstname ~ ' ' ~ address.lastname }}</a></td>
                                    <td>{{ address.street ~ ', ' ~ address.number }}</td>
                                    <td>{{ address.zip }}</td>
                                    <td>{{ address.city }}</td>
                                    <td>{{ address.country }}</td>
                                    <td>{{ address.phonenumber }}</td>
                                    <td>{{ address.birthday|date("d/m/Y") }}</td>
                                    <td>{{ address.email }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                    {#<div class="panel-footer">#}
                    {#<div class="row">#}
                    {#<div class="col col-xs-4">Page 1 of 5#}
                    {#</div>#}
                    {#<div class="col col-xs-8">#}
                    {#<ul class="pagination hidden-xs pull-right">#}
                    {#<li><a href="#">1</a></li>#}
                    {#<li><a href="#">2</a></li>#}
                    {#<li><a href="#">3</a></li>#}
                    {#<li><a href="#">4</a></li>#}
                    {#<li><a href="#">5</a></li>#}
                    {#</ul>#}
                    {#<ul class="pagination visible-xs pull-right">#}
                    {#<li><a href="#">Â«</a></li>#}
                    {#<li><a href="#">Â»</a></li>#}
                    {#</ul>#}
                    {#</div>#}
                    {#</div>#}
                    {#</div>#}
                </div>
            {% else %}

                <h2>Sorry ! :( there are no addresses in database</h2>

            {% endif %}


        </div>
    </div>

{% endblock %}
